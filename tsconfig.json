{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "lib": ["ESNext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
